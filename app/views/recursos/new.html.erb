<div class="form-container mt-4">
  <%= image_tag 'equation.png', class: 'background-img equation' %>
  <%= image_tag 'sun.png', class: 'background-img sun' %>
  <%= image_tag 'purple.png', class: 'background-img purple' %>

  <div class="new-resource-card"
    <h1 id="new-resource-header">Nuevo Recurso</h1>
    <div class="new-resource-form">
      <%= simple_form_for @recurso, html: { multipart: true } do |f| %>
        <%= f.input :titulo, label: 'Titulo' %>
        <%= f.input :category_id,
                    label: "Categoría",
                    collection: Category.all.collect { |category| [category.name, category.id] },
                    prompt: "Selecciona una Categoría" %>
        <%= f.input :descripcion, label: "Descripción" %>
        <%= f.input :url, label: "URL del recurso" %>
        <%= f.input :image, as: :file, label: "Imágen de Referencia" %>
        <%= f.input :steam_area, label: "Área STEAM" %>
        <%= f.input :resource_type, label: "Tipo de recurso" %>
        <%= f.button :submit %>
      <%end %>
    </div>
  </div>
</div>
