<h1>Nuevo Recurso</h1>

<%= simple_form_for @recurso do |f| %>
  <%= f.input :titulo, label: 'Titulo' %>
  <%= f.input :category_id,
              label: "Categoría",
              collection: Category.all.collect { |category| [category.name, category.id] },
              prompt: "Selecciona una Categoría" %>
  <%= f.input :descripcion %>
  <%= f.input :url, label: "URL del recurso" %>
  <%= f.button :submit %>
<%end %>
