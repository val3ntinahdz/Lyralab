<div class="results-grid">
  <% @recursos.each do |recurso| %>
    <div class="resource-card">
      <% if recurso.image.attached? %>
       <%= image_tag recurso.image, class: "resource-img" %>
      <% end %>
      <div class="card-body">
        <h6><%= recurso.titulo %></h6>
        <p><%= recurso.descripcion %></p>
        <p>Categoria: <%= recurso.category.name %></p>
        <a href="<%= recurso.url %>" class="btn-recurso" target="_blank">Ver Recurso</a>
      </div>
    </div>
  <% end %>
</div>
