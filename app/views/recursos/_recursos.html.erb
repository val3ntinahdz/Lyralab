<div class="results-grid">
  <% @recursos.each do |recurso| %>
    <div class="resource-card">
      <% if recurso.image.attached? %>
       <%= image_tag recurso.image, class: "resource-img" %>
      <% end %>
      <div class="card-body">
        <h6><%= recurso.titulo %></h6>
        <p><%= truncate(recurso.descripcion, length: 100) %></p>
        <p><%= recurso.category.name %></p>
        <a href="<%= recurso.url %>" class="btn-recurso" target="_blank">Leer MÃ¡s</a>
      </div>
    </div>
  <% end %>
  <% if @recursos.empty? %>
    <p>No se encontraron recursos</p>
  <% end %>
</div>
